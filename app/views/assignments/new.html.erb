<% content_for :navigation_title do %>
    New Assignment
<% end %>

<% content_for :navigation_left do %>
    <a href="javascript:history.back();" class="back">Cancel</a>
<% end %>

<%= form_for [@course, @assignment] do |f| %>
    <div style="margin: 0px 20px; padding: 20px 0px;">
      <label>Title</label>
      <%= f.text_field :title %>
      <label>Description</label>
      <%= f.text_area :description %>
      <%= f.submit 'Submit', :class => 'button small' %>
    </div>
<% end %>